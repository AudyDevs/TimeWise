<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutDialogLabel"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/background"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/labelTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="name"
            android:maxLines="1"
            android:singleLine="true"
            android:text="@string/dialogLabelTitle"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="5dp"
            android:textColor="@color/primary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start"
            android:orientation="horizontal"
            android:layout_marginHorizontal="5dp">
            <ImageView
                android:id="@+id/imageEmoji"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/ic_empty_image"
                android:contentDescription="@string/cd_image"
                app:tint="@color/disable" />
            <EditText
                android:id="@+id/etTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="name"
                android:hint="@string/dialogLabelHint"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/onBackground"
                android:textColorHint="@color/disable"
                android:backgroundTint="@color/disable"
                android:singleLine="true" />
        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="start"
                android:orientation="horizontal"
                android:padding="8dp"
                android:layout_marginBottom="6dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardYellow"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginHorizontal="6dp"
                    android:backgroundTint="@color/backColorYellow">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/imageYellow"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_check"
                            android:padding="7dp"
                            android:visibility="gone"
                            app:tint="@color/disable"
                            android:contentDescription="@string/cd_Yellow"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardOrange"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginHorizontal="6dp"
                    android:backgroundTint="@color/backColorOrange">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/imageOrange"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_check"
                            android:padding="7dp"
                            android:visibility="gone"
                            app:tint="@color/disable"
                            android:contentDescription="@string/cd_Orange" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardRed"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginHorizontal="6dp"
                    android:backgroundTint="@color/backColorRed">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/imageRed"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_check"
                            android:padding="8dp"
                            android:visibility="gone"
                            app:tint="@color/disable"
                            android:contentDescription="@string/cd_Red"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardPurple"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginHorizontal="6dp"
                    android:backgroundTint="@color/backColorPurple">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/imagePurple"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_check"
                            android:padding="8dp"
                            android:visibility="gone"
                            app:tint="@color/disable"
                            android:contentDescription="@string/cd_Purple" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardBlue"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginHorizontal="6dp"
                    android:backgroundTint="@color/backColorBlue">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/imageBlue"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_check"
                            android:padding="8dp"
                            android:visibility="gone"
                            app:tint="@color/disable"
                            android:contentDescription="@string/cd_Blue"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardLightBlue"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginHorizontal="6dp"
                    android:backgroundTint="@color/backColorLightBlue">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/imageBrown"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_check"
                            android:padding="8dp"
                            android:visibility="gone"
                            app:tint="@color/disable"
                            android:contentDescription="@string/cd_LightBlue"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardCyan"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginHorizontal="6dp"
                    android:backgroundTint="@color/backColorCyan">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/imageCyan"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_check"
                            android:padding="8dp"
                            android:visibility="gone"
                            app:tint="@color/disable"
                            android:contentDescription="@string/cd_Cyan"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardGreen"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginHorizontal="6dp"
                    android:backgroundTint="@color/backColorGreen">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/imageGreen"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_check"
                            android:padding="8dp"
                            android:visibility="gone"
                            app:tint="@color/disable"
                            android:contentDescription="@string/cd_Green"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </HorizontalScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCancel"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:paddingHorizontal="12dp"
                android:text="@string/dialgoLabelCancel"
                android:gravity="center"
                android:textColor="@color/onBackground"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tvAdd">
            </TextView>

            <TextView
                android:id="@+id/tvAdd"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="@string/dialgoLabelAdd"
                android:paddingHorizontal="12dp"
                android:gravity="center"
                android:textColor="@color/primary"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
            </TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>